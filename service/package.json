{
  "name": "hono-starter",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist --clean",
    "start": "node dist/index.js",
    "lint": "eslint src --fix && eslint tests --fix",
    "format": "prettier --write src && prettier --write tests",
    "test": "vitest",
    "prepare": "cd .. && husky service/.husky",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-openapi": "^0.19.6",
    "@scalar/hono-api-reference": "^0.8.9",
    "dotenv": "^16.5.0",
    "hono": "^4.7.9",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@types/node": "^20.11.17",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "3.5.3",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
